    {
        if (item.ID == new Guid(Request.Form["User_To_Add"]))
        {
            user = item;
            break;
        }
    }
    foreach (var item in bll2.GetAwards())
    {
        if (item.ID == new Guid(Request.Form["Award_To_Add"]))
        {
            award = item;
            break;
        }
    }
    bll2.AddUserAward(user, award);
}
